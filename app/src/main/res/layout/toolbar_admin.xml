<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_p"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:gravity="center_horizontal"
                android:src="@drawable/parking_sign">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_toRightOf="@id/image_p"
                android:text="I Smart Parking"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize">


            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ten">

            <ImageView
                android:id="@+id/image_symbol"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/fifteen"
                android:src="@drawable/rupee_symbol">

            </ImageView>

            <ImageView
                android:id="@+id/image_logout"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:layout_marginRight="@dimen/fifteen"
                android:layout_toRightOf="@id/image_symbol"
                android:gravity="center_horizontal"
                android:src="@drawable/shutdown"
                >

            </ImageView>


        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>